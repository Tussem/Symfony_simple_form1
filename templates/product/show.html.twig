{% extends 'base.html.twig' %}

{% block body %}

    <h1> Product </h1>

    <table>
        <tbody>
            <tr>
                <th>Name</th>
                <td><a href="{{ path('product_show', {'id': product.id}) }}">{{ product.name }} </td> </a>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }} </td>
            </tr>
